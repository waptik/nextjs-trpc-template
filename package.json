{
  "name": "@waptik/next-starter",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build:1-migrate": "prisma migrate deploy",
    "build:2-build": "next build",
    "build": "run-s build:*",
    "db-up": "docker-compose up -d",
    "db-seed": "prisma db seed",
    "db-migrate-dev": "yarn prisma migrate dev",
    "db-nuke": "docker-compose down --volumes --remove-orphans",
    "dev": "next dev",
    "dx": "cross-env DATABASE_URL=postgresql://postgres:@localhost:5632/trpcdb run-s db-up db-migrate-dev db-seed dev",
    "start": "next start",
    "lint": "eslint src",
    "lint-fix": "yarn lint --fix",
    "test-dev": "start-server-and-test dev 3000 test",
    "test-start": "start-server-and-test start 3000 test",
    "test": "run-s test:*",
    "test:unit": "jest",
    "test:e2e": "jest --config jest.playwright.config.ts",
    "ts-node": "ts-node --compiler-options \"{\\\"module\\\":\\\"commonjs\\\"}\"",
    "postinstall": "prisma generate"
  },
  "prisma": {
    "seed": "yarn ts-node prisma/seed.ts"
  },
  "prettier": {
    "printWidth": 110,
    "trailingComma": "all",
    "singleQuote": true
  },
  "dependencies": {
    "@chakra-ui/react": "^1.7.2",
    "@emotion/react": "11",
    "@emotion/styled": "11",
    "@hookform/resolvers": "^2.8.3",
    "@prisma/client": "^3.0.1",
    "@trpc/client": "^9.14.0",
    "@trpc/next": "^9.14.0",
    "@trpc/react": "^9.14.0",
    "@trpc/server": "^9.14.0",
    "axios": "^0.24.0",
    "framer-motion": "4",
    "googleapis": "^91.0.0",
    "next": "^12.0.4",
    "next-auth": "^4.10.0",
    "next-seo": "^4.28.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.19.5",
    "react-query": "^3.33.1",
    "rss-parser": "^3.12.0",
    "start-server-and-test": "^1.12.0",
    "superjson": "^1.7.4",
    "zod": "^3.0.0"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/node": "^16.0.0",
    "@types/react": "^17.0.20",
    "@types/uuid": "^8.3.3",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.26.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-next": "^12.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.4",
    "jest": "^27.1.0",
    "jest-playwright": "^0.0.1",
    "jest-playwright-preset": "^1.4.5",
    "lint-staged": "^12.0.2",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.14.1",
    "prettier": "^2.3.2",
    "prisma": "^3.0.1",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.3.0",
    "typescript": "4.4.4"
  },
  "lint-staged": {
    "./{*,{pages,components,lib,utils}/**/*}.{js,ts,jsx,tsx}": [
      "prettier --write",
      "eslint"
    ],
    "./prisma/schema.prisma": [
      "prisma format"
    ]
  }
}
